@model IEnumerable<SonOfCod.Models.Product>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Our Products</h2>
<br />
<main class="cards">
    @foreach (var product in Model)
    {
        <article class="card">
            <div class="container">
                <img src=@Html.DisplayFor(image => product.Image) alt="fish photo">
                <div class="text">
                    <h4>@Html.DisplayFor(name => product.Name)</h4>
                    <p>$@Html.DisplayFor(text => product.Cost)</p>
                </div>
                <button>@Html.ActionLink("Product Details", "Details", new { id = product.ProductId })</button>
            </div>
        </article>
    }
</main>
